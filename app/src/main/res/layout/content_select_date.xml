<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_select_bg"
    android:focusable="true"
    android:focusableInTouchMode="true"
    >

        <TextView
            android:id="@+id/txt_date_header"
            style="@style/dashboard_header_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:paddingTop="@dimen/value_top_margin"
            android:layout_marginLeft="@dimen/value_top_margin"
            />

        <TextView
            android:id="@+id/txt_date_value"
            style="@style/roll_number_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/txt_date_header"
            android:layout_marginTop="@dimen/value_top_margin"
            android:layout_marginBottom="@dimen/value_top_margin"
            android:layout_marginLeft="@dimen/value_top_margin"
            />


        <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:src="@drawable/ic_calendar"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
            />

        <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_date_value"
        android:layout_marginTop="@dimen/value_top_margin"
        android:background="@color/color_seperator_darkgrey" />

</android.support.constraint.ConstraintLayout>