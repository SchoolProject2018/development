<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:elevation="12dp"
    android:innerRadius="0dp"
    android:thicknessRatio="1.9"
    app:cardCornerRadius="10dp"
    android:layout_marginBottom="@dimen/value_top_margin"
    >

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rounded_corner_white">

        <android.support.constraint.Guideline
            android:id="@+id/guideline"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.6"
            />

        <ImageView
            android:id="@+id/img_task_category"
            android:layout_width="@dimen/value_top_margin"
            android:layout_height="match_parent"
            />

        <CheckBox
            android:id="@+id/chk_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/value_top_margin"
            android:layout_marginTop="@dimen/value_top_margin"
            app:layout_constraintLeft_toLeftOf="@id/img_task_category"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="@dimen/value_top_margin"
            app:layout_constraintBottom_toBottomOf="parent"

            />

        <TextView
            android:id="@+id/txt_task_time"
            style="@style/dashboard_header_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/value_top_margin"
            android:layout_marginTop="@dimen/fifteen_dp"
            android:text="11:20AM To 5:30AM"
            app:layout_constraintLeft_toRightOf="@+id/chk_task"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="@dimen/fifteen_dp"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <TextView
            android:id="@+id/txt_task_desc"
            style="@style/dashboard_value_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Math Class "
            app:layout_constraintLeft_toRightOf="@+id/guideline"
            android:layout_marginLeft="@dimen/value_top_margin"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/fifteen_dp"
            android:layout_marginRight="@dimen/value_top_margin"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="@dimen/fifteen_dp"
            app:layout_constraintBottom_toBottomOf="parent"
            />


    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>