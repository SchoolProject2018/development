<resources>

    <!-- Base application theme.-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>

        <item name="colorControlNormal">@color/color_black_overlay</item>
        <item name="colorControlActivated">@color/color_primary_dark</item>
        <item name="colorControlHighlight">@color/color_primary_dark</item>
    </style>

    <!-- EditText -->
    <style name="TextLabel" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/color_primary_dark</item>
    </style>

    <!-- EditText -->
    <style name="PrimaryButton" parent="Theme.AppCompat">
        <item name="colorButtonNormal">@color/color_primary</item>
        <item name="colorControlHighlight">@color/color_primary_dark</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">15dp</item>
    </style>

    <!-- LinkText -->
    <style name="LinkedButton" parent="Theme.AppCompat">
        <item name="android:textColor">@color/color_primary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="HeaderTextDashboard">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@android:color/white</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <!--<item name="tabTextAppearance">@style/CustomTabTextAppearance</item>-->
        <item name="tabSelectedTextColor">@android:color/white</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/color_black_overlay</item>
    </style>

    <style name="drawer_style">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/color_text_grey</item>
    </style>

    <style name="drawer_name_style">
        <item name="android:textSize">@dimen/twenty_sp</item>
        <item name="android:textColor">@color/color_text_white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="drawer_email_style">
        <item name="android:textSize">@dimen/sixteen_sp</item>
        <item name="android:textColor">@color/color_text_white</item>
    </style>

    <style name="buttonStyle">
        <item name="android:background">@drawable/bg_rounded_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/fifteen_sp</item>
        <item name="android:textColor">@color/color_text_white</item>
    </style>


    <style name="switchStyle">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/color_switch_on_green</item>
        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/color_switch_off_red</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/color_text_black</item>
    </style>

    <style name="heading_style">
        <item name="android:background">@drawable/bg_top_rounded_corner</item>
        <item name="android:textColor">@color/color_text_white</item>
        <item name="android:textSize">@dimen/sixteen_sp</item>
    </style>

    <style name="dashboard_header_style">
        <item name="android:textColor">@color/color_text_black</item>
        <item name="android:textSize">@dimen/sixteen_sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="dashboard_value_style">
        <item name="android:textColor">@color/color_text_black</item>
        <item name="android:textSize">@dimen/sixteen_sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="page_header_style">
        <item name="android:textColor">@color/color_primary</item>
        <item name="android:textSize">@dimen/twenty_sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="page_second_header_style">
        <item name="android:textColor">@color/color_primary</item>
        <item name="android:textSize">@dimen/fifteen_sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="roll_number_style">
        <item name="android:textColor">@color/color_text_black</item>
        <item name="android:textSize">@dimen/sixteen_sp</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="student_name_style">
        <item name="android:textColor">@color/color_text_black</item>
        <item name="android:textSize">@dimen/eighteen_sp</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog" >
        <item name="colorAccent">@color/color_primary</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="edittext_note_style">
        <item name="android:textColor">@color/color_text_black</item>
        <item name="android:textSize">@dimen/fourteen_sp</item>
    </style>

    <style name="student_name_header_style">
        <item name="android:textColor">@color/color_primary</item>
        <item name="android:textSize">@dimen/twenty_sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="collapsedappbar_textstyle" >
        <item name="android:textColor">@color/color_text_white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!--buttons color-->
        <item name="colorAccent">@color/color_primary</item>
        <!--title and message color-->
        <item name="android:textColorPrimary">@color/color_text_black</item>
        <item name="android:textAllCaps">false</item>
        <!--dialog background-->
        <!--<item name="android:windowBackground">@drawable/background_dialog</item>-->
    </style>
</resources>
